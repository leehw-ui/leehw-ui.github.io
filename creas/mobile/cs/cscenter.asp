		//리뷰 작성 버튼 클릭시, 팝업 show
		$('.faqList .qBox').click(function(){
			var target = $(this).siblings();
			if(target.css('display')=='block'){
				$(this).parent().removeClass('on');
				target.slideUp();
			}else{
				$(this).parent().addClass('on');
				target.slideDown();
			}
		});
		
	});

</script>



